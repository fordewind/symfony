{% extends 'AppBundle::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block menu %}{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error|trans }}</div>
    {% endif %}

    <form class="form-signin" role="form"  action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        <h2 class="form-signin-heading">Login</h2>
        <input type="email" class="form-control" placeholder="Email address" required autofocus id="username" name="_username" value="{{ last_username }}" >
        <input type="password" class="form-control" placeholder="Password" required id="password" name="_password">
        <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit">Submit</button>
    </form>
{% endblock %}
