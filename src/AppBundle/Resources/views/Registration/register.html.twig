{% extends 'AppBundle::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block menu %}
{% endblock %}

{% block body %}

    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
          class="fos_user_registration_register form-signin" role="form">

        <h2 class="form-signin-heading">Registration</h2>

        {{ form_errors(form) }}

        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email', 'placeholder':'email' }} ) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder':'username' }}) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.plainPassword.children.first, {'attr': {'class': 'form-control', 'type':'password', 'placeholder':'password' }} ) }}
        {{ form_errors(form.plainPassword.children.first) }}
        {{ form_widget(form.plainPassword.children.second, {'attr': {'class': 'form-control verification', 'type':'password', 'placeholder':'password confirmation' }} ) }}

        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        {{ form_rest(form) }}
    </form>

{% endblock %}



